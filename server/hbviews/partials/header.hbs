<header>
  <div class="container">

  <a class="site-brand" href="/">
    {{> logo}}
    <h1>City of Burn</h1>
  </a>
  <nav>
    <ol>
      {{#if (pathMatches url '')}}
      <li><a href="/" class="current">Home</a></li>
      {{else}}
      <li><a href="/">Home</a></li>
      {{/if}}

      {{#if (pathMatches url 'app')}}
      <li><a href="/app" class="current">Play</a></li>
      {{else}}
      <li><a href="/app">Play</a></li>
      {{/if}}

      {{#if (pathMatches url 'about')}}
      <li><a href="/about" class="current">About</a></li>
      {{else}}
      <li><a href="/about">About</a></li>
      {{/if}}

      {{#if user}}
        {{#if (pathMatches url 'user')}}
        <li><a href="/user?{{user.id}}" class="current">{{user.userName}}</a></li>
        {{else}}
        <li><a href="/user?{{user.id}}">{{user.userName}}</a></li>
        {{/if}}
      {{else}}
        {{#if (pathMatches url 'register')}}
        <li><a href="/register" class="current">Register</a></li>
        {{else}}
        <li><a href="/register">Register</a></li>
        {{/if}}

        {{#if (pathMatches url 'login')}}
        <li><a href="/login" class="current">Login</a></li>
        {{else}}
        <li><a href="/login">Login</a></li>
        {{/if}}
      {{/if}}
    </ol>
  </nav>
  </div>
</header>